# Beehive Lodge Environment Configuration
# Copy this file to .env and configure your values

# Database Configuration
DB_ROOT_PASSWORD=secure_root_password_here
DB_NAME=beehive_lodge
DB_USER=beehive
DB_PASSWORD=secure_db_password_here

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_here

# Email Configuration (for PHP backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
FROM_EMAIL=your-email@gmail.com
TO_EMAIL=info@beechivelodge.com

# Monitoring Configuration
GRAFANA_PASSWORD=secure_grafana_password

# Domain Configuration
DOMAIN=beechivelodge.com
WWW_DOMAIN=www.beechivelodge.com

# SSL Configuration
SSL_EMAIL=admin@beechivelodge.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Development/Production Mode
APP_ENV=production
DEBUG=false

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Social Media
FACEBOOK_URL=https://facebook.com/beechivelodge
